<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextViewCG">
        <attr name="cg_fontPath" format="string"/>
    </declare-styleable>

    <declare-styleable name="ButtonCG">
        <attr name="cg_fontPath"/>
    </declare-styleable>

    <declare-styleable name="EditTextCG">
        <attr name="cg_fontPath"/>
    </declare-styleable>

    <declare-styleable name="RadioButtonCG">
        <attr name="cg_fontPath"/>
    </declare-styleable>

    <declare-styleable name="ImageViewCG">
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="cg_backgroundColor" format="color"/>
        <attr name="cg_borderColor" format="color"/>
        <attr name="cg_borderSize" format="dimension"/>
        <attr name="cg_fontPath"/>
        <attr name="cg_imageMode">
            <enum name="IMAGE_SQUARE" value="0" />
            <enum name="IMAGE_CIRCLE" value="1" />
            <enum name="TEXT_SQUARE" value="2" />
            <enum name="TEXT_CIRCLE" value="3" />
            <enum name="IMAGE_NORMAL" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FullPageProgressBarCG">
        <attr name="loading" format="boolean" />
        <attr name="loadingBackGroundColor" format="color" />
        <attr name="loadingBackGroundVisibility" format="float" />
        <attr name="barColor" />
        <attr name="loadingText" format="string" />
        <attr name="loadingTextSize" format="dimension" />
        <attr name="loadingTextColor" format="color" />
        <attr name="barWidth" />
    </declare-styleable>

    <declare-styleable name="ProgressBarCG">
        <attr name="android:progress"/>
        <attr name="android:max"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="barColor" format="color"/>
        <attr name="backgroundColor"/>
        <attr name="loading"/>
        <attr name="speed" format="integer"/>
        <attr name="progressMode">
            <enum name="MODE_CIRCLE" value="0"/>
            <enum name="MODE_LINEAR" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CheckableImageView">
        <attr name="android:checked" />
        <attr name="cg_image_on" format="reference" />
        <attr name="cg_image_off" format="reference" />
    </declare-styleable>

</resources>